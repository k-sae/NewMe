<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@drawable/shadow_rectangle" android:orientation="vertical">
<RelativeLayout
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:padding="@dimen/default_spacing"
    >

    <ImageView
        android:id="@+id/news_list_item_imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/default_image_news"
        android:scaleType="fitXY"
        android:contentDescription="@string/user_image" />

    <TextView
        android:id="@+id/news_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/news_list_item_imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/news_title_fontSize"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="5dp"
        android:ems="10" />
    <TextView
        android:id="@+id/news_list_item_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/news_list_item_imageView"
        android:layout_below="@id/news_list_item_title"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/news_details_fontSize"
        android:layout_marginTop="@dimen/textFields_default_margin"
        android:layout_marginStart="5dp"
        android:ems="10" />

</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" android:background="@color/authui_colorPrimary" android:layout_margin="@dimen/default_spacing" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_spacing"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="18dp" android:textColor="@color/heartColor" android:text="0"
            android:drawableStart="@drawable/heart_filled"
            android:layout_alignParentStart="true"
            android:id="@+id/likes_count_news_list"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="18dp" android:textColor="@color/commentColor" android:text="0"
            tools:ignore="HardcodedText"
            android:layout_centerInParent="true" android:drawableStart="@drawable/comments_filled"
            android:id="@+id/comments_count_news_list"
            />
    </RelativeLayout>
</LinearLayout>