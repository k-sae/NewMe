<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@drawable/shadow_rectangle"
    >

    <ImageView
        android:id="@+id/news_list_item_imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/default_image_news"
        android:scaleType="fitXY"
        android:contentDescription="@string/user_image" />

    <TextView
        android:id="@+id/news_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/news_list_item_imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/news_title_fontSize"
        android:textColor="@color/titleFontColor"
        android:layout_marginStart="5dp"
        android:ems="10" />
    <TextView
        android:id="@+id/news_list_item_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/news_list_item_imageView"
        android:layout_below="@id/news_list_item_title"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/news_details_fontSize"
        android:layout_marginTop="@dimen/textFields_default_margin"
        android:layout_marginStart="5dp"
        android:ems="10" />

</RelativeLayout>