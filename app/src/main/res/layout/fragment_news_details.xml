<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kareem.newme.News.NewsDetailsFragment"
    android:padding="@dimen/default_spacing"
    android:layout_margin="@dimen/default_spacing"
    tools:showIn="@layout/activity_news_details">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_alignParentBottom="true"
        android:background="#fff"
        android:layout_alignParentStart="true" android:id="@+id/comments_writer_holder">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="90dp"
            android:layout_weight="0.80"
            android:hint="@string/write_comment"
            android:id="@+id/commentWriter_EditText"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_send"
                android:padding="@dimen/default_spacing"
                android:id="@+id/send_button" android:contentDescription="@string/button_text_send"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/news_details_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/comments_writer_holder"
        app:layoutManager="LinearLayoutManager" />
</RelativeLayout>
