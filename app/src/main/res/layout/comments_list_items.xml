<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:id="@+id/comments_list_name" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/comments_list_date" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/comments_list_content"
        android:textColor="#000"
        android:inputType="none"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comments_list_edit_button"
            android:text="edit"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comments_list_del_button"
            android:text="del"/>
    </LinearLayout>

</LinearLayout>