<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:id="@+id/news_details_image_view"
    android:src="@mipmap/default_image_news"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/news_details_textView_title"
        android:textSize="@dimen/news_title_fontSize"
        android:textColor="@color/titleFontColor"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/news_details_textView_content"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            style="@style/image_control_button_style"
            android:src="@drawable/like"
            android:id="@+id/news_details_image_view_like"
            />
        <ImageView
            style="@style/image_control_button_style"
            android:src="@drawable/edit"
            android:id="@+id/news_details_image_view_edit"
            />
        <ImageView
            style="@style/image_control_button_style"
            android:src="@drawable/delete"
            android:id="@+id/news_details_image_view_delete"
  />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/like_button"
        />
</LinearLayout>